# Put in /usr/local/bin
# Set as executable!

if [ -d /etc/X11/xinit/xinitrc.d ] ; then
    for f in /etc/X11/xinit/xinitrc.d/?* ; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi

# Correct display
xrandr --output eDP1 --mode 3200x1800 --dpi 200 --rate 144 &
gsettings set org.gnome.desktop.interface scaling-factor 2 &
export GDK_SCALE=2 &

# Load Xresources
xrdb -merge ~/.Xresources &

# Delay between button presses
xset r rate 220 &
# No black screen after inactivity
xset -dpms &
xset s off &
# Caps as control
setxkbmap -option ctrl:nocaps &
# Compositor
# compton --config ~/.config/compton.conf &
# Cursor
xsetroot -cursor_name left_ptr &
# Random background each restart
feh --randomize --bg-fill ~/Dropbox/Desktops/flat_bright/* &
# Locking
xscreensaver -no-splash &

eval `dbus-launch --auto-syntax`

# bar
stack exec taffybar &

# NetworkManager applet
nm-applet &
# Dropbox
dropbox start &

# emacs daemon
emacs --daemon &

# xmonad path
export PATH=~/.local/bin:$PATH

# Start xmonad
exec /$HOME/.local/bin/xmonad
