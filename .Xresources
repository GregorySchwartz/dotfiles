! XTerm settings

! UTF-8
XTerm*locale: true
XTerm*utf8: 1

! Use alt key
XTerm*metaSendsEscape: true

! More lines saved
XTerm*saveLines: 10000

! Border width
XTerm*borderWidth: 0

! Line spacing
XTerm*scaleHeight: 0.9

! Backspace not send Ctrl-h
XTerm*backarrowKey: false

! Font
XTerm*faceName: Input Mono Compressed:style=Light:size=12:antialias=true
XTerm*faceNameDoublesize: Droid Sans:size=12

! URxvt Settings (using truecolor patch from the AUR)

! Scrollbar
URxvt.scrollBar: false

! Font
URxvt.font: xft:Input Mono Compressed:Light:size=12:antialias=true
URxvt.boldFont: xft:Input Mono Compressed:Bold:size=12:antialias=true
URxvt.italicFont: xft:Input Mono Compressed:Italic:size=12:antialias=true
URxvt.boldItalicFont: xft:Input Mono Compressed:Bold Italic:size=12:antialias=true

! Spacing
URxvt.letterSpace: -1

! Open links
URxvt.perl-ext-common: default,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

